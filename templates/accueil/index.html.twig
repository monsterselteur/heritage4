    {% if is_granted('ROLE_PROF') %}
    <table class="table">
        <thead>
        <tr>
            <th>email</th>
            <th>prenom</th>
            <th>nom</th>
            <th>promo</th>
            <th>option</th>
        </tr>
        </thead>
        <tbody>
        {% for i in eleve %}
            <tr>
                <td>{{ i.email }}</td>
                <td> {{ i.prenom }}</td>
                <td>{{ i.nom }}</td>
                <td>{{ i.promo }}</td>
                <td>{{ i.option }}</td>
                <td>
                    <a href="{{ path('app_eleve_show', {'id': i.id}) }}">Voir</a>
                    <a href="{{ path('app_eleve_edit', {'id': i.id}) }}">Modifer</a>
