{% extends 'base.html.twig' %}

{% block title %}Activite{% endblock %}

{% block body %}
    <h1>Activite</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ activite.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ activite.nom }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ activite.description }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ activite.type }}</td>
            </tr>
            <tr>
                <th>Competence</th>
                <td>{{ activite.competence }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ app.request.headers.get('referer') }}">Retour</a>

    <a href="{{ path('app_activite_edit', {'id': activite.id}) }}">Modifier</a>

    {{ include('activite/_delete_form.html.twig') }}
{% endblock %}
