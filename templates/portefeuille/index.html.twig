{% extends 'base.html.twig' %}

{% block title %}Portefeuille index{% endblock %}

{% block body %}
    <h1>Portefeuille index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for portefeuille in portefeuilles %}
            <tr>
                <td>{{ portefeuille.id }}</td>
                <td>
                    <a href="{{ path('app_portefeuille_show', {'id': portefeuille.id}) }}">Voir</a>
                    <a href="{{ path('app_portefeuille_edit', {'id': portefeuille.id}) }}">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">pas d'enregistrements trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_portefeuille_new') }}">Créer un nouveau portefeuille</a>
{% endblock %}
