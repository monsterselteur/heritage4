{% extends 'base.html.twig' %}

{% block title %}Nouveau Prof{% endblock %}
{% block stylesheets %}    <link rel="stylesheet" href="{{ asset('CSS/StyleNew.css') }}"> {% endblock %}


{% block body %}

    <div class="login-card mt-5" >

    <h1 class="text-center">Cr√©er un nouveau Prof</h1>

    <div class="formAll">

        {{ form_start(form) }}
        {{ form_row(form.email) }}
        {{ form_row(form.prenom) }}
        {{ form_row(form.nom) }}
        {{ form_row(form.dateDeNaissance) }}
        {{ form_row(form.password) }}
