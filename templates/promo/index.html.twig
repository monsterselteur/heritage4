{% extends 'base.html.twig' %}

{% block title %}Promo index{% endblock %}

{% block body %}
    <h1>Promo index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Date</th>
                <th>eleves</th>
                <th>actions</th>

            </tr>
        </thead>
        <tbody>
        {% for promo in promos %}
            <tr>
                <td>{{ promo.nom }}</td>
                <td>{{ promo.date }}</td>
                <td>
                {% for j in promo.user1s %}
                    {{ j.nom }}<br>
                {% endfor %}
                </td>
                <td>
                    <a href="{{ path('app_promo_show', {'id': promo.id}) }}">show</a>
                    {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_promo_edit', {'id': promo.id}) }}">edit</a><br>
                    {% endif %}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}

        </tbody>
    </table>

    <a href="{{ path('app_promo_new') }}">Create new</a>

{% endblock %}