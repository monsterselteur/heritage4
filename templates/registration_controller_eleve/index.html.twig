{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}
   {% block stylesheets %}    <link rel="stylesheet" href="{{ asset('CSS/style.css') }}"> {% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Mon site web</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
            <ul class="navbar-nav ml-auto"> <!-- Ajout de la classe "ml-auto" pour aligner à droite -->
                <li class="nav-item">
                    <a class="nav-link" href="/">Accueil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/competence">Competence</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/groupe/competence">Groupe Competence</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/registration">Creation Utilisateur</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/logout">Deconnexion</a>
                </li>
            </ul>
        </div>
    </nav>


    <div class="login-card mt-5" >
        <h1>Inscription</h1>

        {{ form_start(form) }}
        {{ form_row(form.email, {'label': 'E-mail :'}) }}
        {{ form_row(form.prenom, {'label': 'Prénom :'}) }}
        {{ form_row(form.name, {'label': 'Nom :'}) }}
        {{ form_row(form.password) }}
        {{ form_row(form.option, {'label': 'Option :'}) }}
        {{ form_row(form.dateDeNaissance, {'label': 'Date de Naissance :'}) }}

        {{ form_row(form.submit, {'label': 'Valider'}) }}

        {{ form_end(form) }}
    </div>
{% endblock %}